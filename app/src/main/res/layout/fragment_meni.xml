<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="620dp"
    tools:context=".ui.MeniFragment">

    <Button
        android:id="@+id/speechButton"
        android:background = "@drawable/button_oval"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="S"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Button
        android:id="@+id/volup"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:background="@drawable/button_oval"
        android:text="+"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/voldown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/speechButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/voldown"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:background="@drawable/button_oval"
        android:text="-"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/speechButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/chup"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:background="@drawable/button_oval"
        android:text="+"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/speechButton" />

    <Button
        android:id="@+id/chdown"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:background="@drawable/button_oval"
        android:text="-"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/speechButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/volumeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="16dp"
        android:text="Volume"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/volup"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/chText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:text="Channel"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/chup"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="50dp"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/volumeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="50dp"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/chText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831" />

    <TextView
        android:id="@+id/returnedText"
        android:textSize="30dp"
        android:layout_width="188dp"
        android:layout_height="157dp"
        android:layout_marginTop="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speechButton" />

    <Button
        android:id="@+id/bluetoothButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_action_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

</androidx.constraintlayout.widget.ConstraintLayout>