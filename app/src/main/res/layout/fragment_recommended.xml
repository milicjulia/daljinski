<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".ui.RecommendedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/naziv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/kanal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/vreme1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/opis1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp" />

        <Button
            android:id="@+id/gledaj1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:backgroundTint="#faffaf"
            android:text="Gledaj"
            android:textColor="#000000"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">


        <TextView
            android:id="@+id/naziv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/kanal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/vreme2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/opis2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp" />

        <Button
            android:id="@+id/gledaj2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:backgroundTint="#faffaf"
            android:text="Gledaj"
            android:textColor="#000000"
            tools:ignore="TouchTargetSizeCheck" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/naziv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/kanal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/vreme3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/opis3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp" />

        <Button
            android:id="@+id/gledaj3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:backgroundTint="#faffaf"
            android:text="Gledaj"
            android:textColor="#000000"
            tools:ignore="TouchTargetSizeCheck" />



    </LinearLayout>

</LinearLayout>
